<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity.HomeFragment"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/info_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="hello world" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:onClick="onLogout"
            tools:ignore="MissingConstraints" />
        <Button
            android:onClick="onShow"
            android:text="all user in db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewMyProfile"
        android:text="my profile" />

    <Button
            android:onClick="viewConversation"
            android:text="my conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/chatList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <Button
            android:onClick="createConversation"
            android:text="new conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>