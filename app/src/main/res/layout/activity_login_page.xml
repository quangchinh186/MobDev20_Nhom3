<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#12101A"
        android:gravity="center_horizontal"
        android:paddingRight="124px"
        android:paddingLeft="124px">

        <ImageView
            android:id="@+id/login__logo"
            android:layout_width="665px"
            android:layout_height="222px"
            android:src="@drawable/logo"
            android:layout_marginTop="345px" />
        <TextView
            android:id="@+id/login__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="60px"
            android:textStyle="bold"
            android:layout_marginTop="-10dp" />
        <LinearLayout
            android:id="@+id/email_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textSize="40px"
                android:textColor="@color/white"
                android:labelFor="@+id/email__box"/>

            <Button
                android:id="@+id/email_box"
                android:layout_width="wrap_content"
                android:layout_height="110px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:background="@drawable/editext_box1" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/password_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="40px"
                android:textColor="@color/white"
                android:labelFor="@id/pasword__input"/>

            <Button
                android:id="@+id/pasword__input"
                android:layout_width="wrap_content"
                android:layout_height="110px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:background="@drawable/editext_box1" />

        </LinearLayout>
        <TextView
            android:id="@+id/login__forget_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:layout_marginTop="45px"
            android:textColor="@color/white"
            android:textSize="40px"
            android:alpha="0.6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản mới"

            android:textColor="@color/white"
            android:textSize="32px"
            android:layout_marginTop="192px" />
        
        <Button
            android:id="@+id/login__submit"
            android:layout_width="675px"
            android:layout_height="100px"
            android:background="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="52px"
            android:text="Đăng nhập" />

    </LinearLayout>
    <AbsoluteLayout
        android:id="@+id/decor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/decor_blur"
            android:layout_width="346.415dp"
            android:layout_height="389dp"
            android:src="@drawable/blur_login"
            android:layout_x="135dp"
            android:layout_y="280dp"
            />
    </AbsoluteLayout>
</FrameLayout>