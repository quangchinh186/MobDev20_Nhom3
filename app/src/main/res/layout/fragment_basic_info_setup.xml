<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/basic_info_setup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="40.59dp"
    android:paddingBottom="53.33dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/basic_info_setup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/basic_info_setup_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="15.92dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37.41dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/basic_info_setup_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15.92dp">
            <EditText
                android:id="@+id/basic_info_setup_day_input"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text"
                android:inputType="date"
                android:padding="10dp"
                android:layout_marginEnd="13.13dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
            <EditText
                android:id="@+id/basic_info_setup_month_input"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text"
                android:inputType="date"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_marginEnd="13.13dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            <EditText
                android:id="@+id/basic_info_setup_year_input"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text"
                android:inputType="date"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35.82dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="110.53dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@drawable/custom_edit_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteGender"
                    android:layout_width="match_parent"
                    android:layout_height="50.25dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"
                    android:inputType="none"
                    android:textSize="16dp"
                    android:text="Khác" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_gravity="right"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="110.53dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@drawable/custom_edit_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteSearch"
                    android:layout_width="match_parent"
                    android:layout_height="50.25dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"
                    android:inputType="none"
                    android:textSize="16dp"
                    android:text="Khác" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
